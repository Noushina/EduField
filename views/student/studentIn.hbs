<section>
  <div class="Main">
    <div class="tutorHome">

      <div class=" col-md-12 ">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="https://tps.edu.in/images/gallery/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100"
                src="https://www.hpsramanthapur.org/wp-content/uploads/2020/02/Inter-House-Quiz-Competition-2019-20-600x300.jpg"
                alt="Second slide">
            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>

      </div>
      <div class="">
        <div class="col-md-12 " style="text-align: center; margin-top:2rem;">
          <div class="row">

            <div class="col-md-6  " style=" margin-top:2rem; ">
              <div class="activity">
                <h3 style="text-align: center;">Announcement</h3>
                </h1>
                {{#each announcement}}
                <div>
                  <a href="/Announcement" style="color: black; font-size: 15px;"><i
                      class="fas fa-caret-right"></i>{{this.message}}</a>

                </div>
                {{/each}}

              </div>
            </div>



            <div class=" col-md-6" style="text-align: center; margin-top:2rem;">
              <div class="activity">
                <h3 style="text-align: center;">Events</h3>
                {{#each events}}
                <div>
                  <p style="color: black; font-size: 15px;"><i class="fas fa-caret-right"></i>{{this.Event}} on
                    {{this.date}} at
                    {{this.place}}</p>
                  <a class="btn btn-primary" href=" /EventDetails/{{this._id}}">Continue>></a>

                </div>
                {{/each}}
              </div>

            </div>
          </div>
        </div>
      </div>

</section>
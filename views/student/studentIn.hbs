<section>
  <div class="Main">
    <div class="tutorHome">

      <div class=" col-md-12 ">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100"
                src="https://www.pondot.com/wp-content/uploads/2018/11/motivational_quotes_for_Students_success-3.jpg"
                alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100"
                src="https://i.cdn.talentegg.ca/incubator/wp-content/uploads/2012/07/quote-7-thomas-a-edison-1.jpg"
                alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://skyprep.com/wp-content/uploads/2013/07/Alfred_Quotes1.jpg"
                alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

    </div>
    <div class="">
      <div class="col-md-12 " style="text-align: center; margin-top:2rem;">
        <div class="row">

          <div class="col-md-6  " style=" margin-top:2rem; ">
            <div class="activity">
              <h3 style="text-align: center;">Announcement</h3>
              </h1>
              {{#each announcement}}
              <div>
                <a href="/Announcement" style="color: black; font-size: 15px;"><i
                    class="fas fa-caret-right"></i>{{this.message}}</a>

              </div>
              {{/each}}

            </div>
          </div>



          <div class=" col-md-6" style="text-align: center; margin-top:2rem;">
            <div class="activity">
              <h3 style="text-align: center;">Events</h3>
              {{#each events}}
              <div>
                <p style="color: black; font-size: 15px;"><i class="fas fa-caret-right"></i>{{this.Event}} on
                  {{this.date}} at
                  {{this.place}}</p>
                <a class="btn btn-primary" href=" /EventDetails/{{this._id}}">Continue>></a>

              </div>
              {{/each}}
            </div>

          </div>
        </div>
      </div>
    </div>

</section>
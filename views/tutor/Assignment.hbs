<section>
    <div class="backdrop">
        <div class="col-12 " style="text-align: center; margin-top:2rem;">
            <h3>Assignments</h3>
            <a href="/tutor/AddAssignment" class="btn btn-primary mt-2 mb-5">Add Assignments </a>

        </div>
        <div class="table-responsive-sm">
            <table class="table table-striped">
                <thead>
                    <tr class="tableHead">
                        <th>Date</th>
                        <th scope="col">Topic</th>
                        <th scope="col">File</th>

                        <th>Date of submission</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each assignment}}

                    <tr>
                        <th>{{this.date}} </th>

                        <th scope="row">{{this.topic}}</th>
                        <td><a href="/Assignments/{{this._id}}.pdf"><i class="far fa-file-pdf"></i> </a> </td>
                        <td>{{this.Date}} </td>
                        <td>
                            <a href="/tutor/deleteAssignment/{{this._id}}" style="padding-left:25px;"
                                onclick="return confirm('Are you sure, Do you want to delete {{this.topic}} ?')"><i
                                    class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
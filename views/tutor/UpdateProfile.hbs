<section>
    <div class="container uprofile backdrop">


        <div class="panel-body">
            <div style="margin-bottom: 5%; padding-left: 20%;">
                <h3>Update Profile</h3>
            </div>
            <div class="form-horizontal">
                <form action="/tutor/UpdateProfile" enctype="multipart/form-data" id="myForm" method="POST">
                    <div class=" form">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label"> Name:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Name" placeholder=" Name" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label"> Profile Pic:</label>

                                </div>
                                <div class="col-4">
                                    <img src="/images/20180221_081521-1.jpg" alt="" style="width: 100px;hight:auto"
                                        id="imgView" class="pt-3 pb-3">
                                    <input type="file" class="" accept="image/jpeg" name="image" id="image"
                                        style="overflow: hidden;" onchange="viewImage(event)" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label">Subject:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Subject" placeholder="Subject"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-12">
                                    <h4>Contact:</h4><br>
                                </div>
                                <div class="col-2">
                                    <label class="control-label">Mobile No:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="Mobile" name="Mobile" placeholder="Mobile No"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label">Email:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="email" name="Email" placeholder="Email" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-12">
                                    <h4>Experiences:</h4><br>

                                </div>
                                <div class="col-2">

                                    <label class="control-label">Institutions:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Institutions"
                                        placeholder="Institutions" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label">Years of Experiance:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Years"
                                        placeholder="Years of Experiance" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2">
                                    <label class="control-label">Description:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Description" placeholder="Description"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-12">
                                    <h4>Education:</h4><br>
                                </div>
                                <div class="col-2">
                                    <label class="control-label">Courses:</label>

                                </div>
                                <div class="col-4">
                                    <input class="form-control" type="text" name="Courses" placeholder="Courses"
                                        required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-primary" type="submit" id="submit">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div> <!-- end form-horizontal -->
        </div> <!-- end panel-body -->

    </div> <!-- end container-fluid -->
</section>
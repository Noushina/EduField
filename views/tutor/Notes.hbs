<section>
    <div class="students backdrop">
        <div class="col-12 " style="text-align: center; margin-top:2rem;">
            <h3>Notes</h3>
            <a href="/tutor/AddNotes" class="btn btn-primary mt-3 mb-5">Add Daily Notes</button>
            </a>

        </div>
        <div class="table-responsive-sm">
            <table class="table table-striped">
                <thead>
                    <tr class="tableHead">
                        <th>Date</th>
                        <th scope="col">Topic</th>
                        <th scope="col">Note</th>
                        <th>Class</th>
                        <th>YouTube viedeo</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each dailyClass}}
                    <tr>
                        <th>{{this.date}}</th>

                        <th scope="row">{{this.topic}}</th>
                        <td><a class="pdf" href="/Notes/{{this._id}}.pdf"><i class="far fa-file-pdf"></i></i></a> </td>
                        <td><video width="200rem" height="150rem" id="MyClass" controls>
                                <source src="/Class/{{this._id}}.mp4" type="video/mp4">
                            </video>
                        </td>
                        <td>
                            <iframe width="200rem" height="150rem" src="{{this.youtube}}/embed">
                            </iframe>
                        </td>
                        <td>
                            <a class="btn btn-danger " href="/tutor/deleteNote/{{this._id}}" style="margin-top:40px ;"
                                onclick="return confirm('Are you sure, Do you want to delete {{this.topic}} ?')"><i
                                    class="fas fa-trash-alt">delete</i></a>
                        </td>







                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>




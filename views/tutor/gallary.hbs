<section>
    <div class="container profile backdrop">


        <div class="panel-body">
            <div style="margin-bottom: 5%; padding-left: 20%;">
                <h3>Photose</h3>
            </div>
            <div class="form-horizontal">
                <form action="/tutor/gallary" enctype="multipart/form-data" method="POST">
                    <div class="form">




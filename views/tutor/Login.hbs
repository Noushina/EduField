<section class="login">
  <div class="background">
    <a href="/">
      <img src="/images/14df067f-1881-4ae9-bdbc-e63a69fd4c91_200x200.png" style="height: 7rem;" alt="">
    </a>
    <div class="login-box">
      <h1>Login</h1>

      <form action="/tutor/Login" method="POST">
        {{#if tutorLogginErr}}
        <p class="error" style="color: beige;">{{tutorLogginErr}}</p>
        {{/if}}

        <div class="textbox">
          <i class="fa fa-user" aria-hidden="true"></i>
          <input type="text" id="username" name="username" placeholder="Username" />
        </div>

        <div class="textbox">
          <i class="fa fa-lock" aria-hidden="true"></i>
 <input type="password" placeholder="Password" name="password" id="myInput"/>
<span class=" fa fa-eye t" onclick="myFunction()" style=" color:white">        </div>

        <button class="signinbtn">Sign In</button>
      </form>
    </div>
  </div>
</section>


<script>
function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}


</script>